<%= render partial: "layouts/header" %>
<%= render partial: "searches/result", locals: {school: @school, show_reviews: false} %>

<%= render(layout: 'layouts/card') do %>
  <h2 class="reviews-header">Reviews</h2>
<% end %>

<% if @school.reviews.published.recent.any? %>
  <!--
    Link to the form at the end of the
    page if there are reviews to skip past
  -->
  <a href="#leave-a-review">Review this school</a>
<% end %>

<% @school.reviews.published.recent.each do |review| %>
  <% render partial: 'layouts/card' do %>
    <%= review.review_type %><br/>
    My child is: <%= review.child_characteristics.join(", ") %><br/>
    Good: <%= review.pros %> <br/>
    Bad: <%= review.cons %> <br/>
    Ugly: <%= review.comments %> <br/>
    When: <%= review.created_at %> <br/>
  <% end %>
<% end %>

<%= render(layout: 'layouts/card') do %>
  <div id="leave-a-review">
    <%= render partial: "reviews/form", locals: {school: @school, review: Review.new} %>
  </div>
<% end %>
